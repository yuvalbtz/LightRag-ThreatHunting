# Use conda base image
FROM continuumio/miniconda3:latest

# Set working directory
WORKDIR /app

# Copy conda environment file
COPY environment.yml ./

# Install system dependencies
RUN apt-get update && apt-get install -y && apt install -y libpcap0.8 && apt-get install -y tcpdump \
    build-essential \
    curl \
    git \
    inotify-tools \
    && rm -rf /var/lib/apt/lists/*

# Create and activate conda environment
RUN conda env create -f environment.yml

# Make RUN commands use the conda environment
SHELL ["conda", "run", "-n", "lightrag_env", "/bin/bash", "-c"]

# Copy application code
COPY . .

# Install the local lightrag package without dependencies first
RUN pip install -e . --no-deps

# Install dependencies separately using the setup requirements
COPY requirements-setup.txt ./
RUN pip install -r requirements-setup.txt

# Install uvicorn and watchfiles for development hot reload
RUN pip install uvicorn[standard] watchfiles

# Copy the development watch script
COPY watch-docker.sh /app/watch-docker.sh
RUN chmod +x /app/watch-docker.sh

# Create necessary directories
RUN mkdir -p /app/AppDbStore /app/custom_kg

# Expose port for the API
EXPOSE 8000

# Set environment variables
ENV PYTHONPATH=/app

# Start the development server
CMD ["conda", "run", "--no-capture-output", "-n", "lightrag_env", "/bin/bash", "/app/watch-docker.sh"]
